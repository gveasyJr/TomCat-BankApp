<?xml version="1.0" encoding="UTF-8" ?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0" metadata-complete="true">

    <description>Banking Application</description>
    <display-name>Banking Application</display-name>

    <request-character-encoding>UTF-8</request-character-encoding>


  <!-- Define servlets that are included in the example application -->
    <servlet>
        <servlet-name>UserHome</servlet-name>
        <servlet-class>UserHome</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateUser</servlet-name>
        <servlet-class>CreateUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateAccount</servlet-name>
        <servlet-class>CreateAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountManager</servlet-name>
        <servlet-class>AccountManager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAccounts</servlet-name>
        <servlet-class>ViewAccounts</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TransferFunds</servlet-name>
        <servlet-class>TransferFunds</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TransferFundsManager</servlet-name>
        <servlet-class>TransferFundsManager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewTransactionHistory</servlet-name>
        <servlet-class>ViewTransactionHistory</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserHome</servlet-name>
        <url-pattern>/UserHome</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateUser</servlet-name>
        <url-pattern>/CreateUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateAccount</servlet-name>
        <url-pattern>/CreateAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountManager</servlet-name>
        <url-pattern>/AccountManager</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAccounts</servlet-name>
        <url-pattern>/ViewAccounts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TransferFunds</servlet-name>
        <url-pattern>/TransferFunds</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TransferFundsManager</servlet-name>
        <url-pattern>/TransferFundsManager</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewTransactionHistory</servlet-name>
        <url-pattern>/ViewTransactionHistory</url-pattern>
    </servlet-mapping>
</web-app>